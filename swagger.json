{
  "openapi": "3.0.0",
  "info": {
    "title": "Task Manager API",
    "description": "An API for Task Manager",
    "version": "0.0.1"
  },
  "servers": [
    {
      "url": "http://167.71.211.204/",
      "description": "Deploy server"
    },
    {
      "url": "http://localhost:3000/",
      "description": "Localhost server"
    }
  ],
  "paths": {
    "/api/v1/tasks/": {
      "get": {
        "summary": "Get all tasks",
        "responses": {
          "200": {
            "description": "Fetch successful",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "_id": {
                        "type": "string",
                        "default": "61e50e802f488296cd24f519"
                      },
                      "name": {
                        "type": "string",
                        "default": "Task name"
                      },
                      "completed": {
                        "type": "boolean",
                        "default": false
                      },
                      "createdAt": {
                        "type": "string",
                        "default": "2022-01-17T06:36:48.124Z"
                      },
                      "updatedAt": {
                        "type": "string",
                        "default": "2022-01-17T06:36:48.124Z"
                      },
                      "_v": {
                        "type": "number",
                        "default": 0
                      }
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal server error"
          }
        }
      },
      "post": {
        "summary": "Create tasks",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "minLength": 5,
                    "maxLength": 20,
                    "type": "string",
                    "default": "Task Name"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Create task successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "default": "Create task successfully"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal server error"
          },
          "400": {
            "description": "Bad request"
          }
        }
      }
    },
    "/api/v1/tasks/{id}": {
      "get": {
        "summary": "Get task",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "schema": {
              "type": "string"
            },
            "required": true,
            "description": "String id of the task to get"
          }
        ],
        "responses": {
          "200": {
            "description": "Get task successful",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "_id": {
                      "type": "string",
                      "default": "61e50e802f488296cd24f519"
                    },
                    "name": {
                      "type": "string",
                      "default": "Task name"
                    },
                    "completed": {
                      "type": "boolean",
                      "default": false
                    },
                    "createdAt": {
                      "type": "string",
                      "default": "2022-01-17T06:36:48.124Z"
                    },
                    "updatedAt": {
                      "type": "string",
                      "default": "2022-01-17T06:36:48.124Z"
                    },
                    "_v": {
                      "type": "number",
                      "default": 0
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Task not found"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      },
      "patch": {
        "summary": "Update task",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "schema": {
              "type": "string"
            },
            "required": true
          }
        ],
        "requestBody": {
          "required": true,
          "description": "Send updated task data",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "default": "Task Name"
                  },
                  "completed": {
                    "type": "boolean",
                    "default": true
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "default": "Successful"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Task not found"
          },
          "500": {
            "description": "internal server error"
          }
        }
      },
      "delete": {
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "schema": {
              "type": "string"
            },
            "required": true
          }
        ],
        "summary": "Delete task",
        "responses": {
          "200": {
            "description": "Delete successful",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "default": "Successful"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Task not found"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    }
  }
}
